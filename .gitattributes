# Auto detect text files and normalize line endings
* text=auto

# Force specific file types
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf

# Windows-specific
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.ico binary
*.woff binary
*.woff2 binary
